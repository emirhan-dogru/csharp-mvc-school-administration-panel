@using MvcCrudProje.Models.Entities
@model List<Student>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Öğrenciler</h3>
                <a href="/Student/Create" class="btn btn-primary btn-xs pull-right">Yeni Ekle</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>Öğrenci Soyadı</th>
                            <th>Yaşı</th>
                            <th>Cinsiyet</th>
                            <th>Öğretmen Adı</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            //öğrenci sayısını nasıl alıcam buraya
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Surname</td>
                            <td>@student.Age</td>
                            <td>@student.Gender</td>
                            <td>@student.teacher.Name</td>
                            <td><a class="btn-primary" href="/Student/Edit/@student.Id">Guncelle</a></td>
                            <td><a class="btn-primary" href="/Student/Delete/@student.Id">Sil</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
