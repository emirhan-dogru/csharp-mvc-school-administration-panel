
@using MvcCrudProje.Models.Entities
@model List<Teacher>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Öğretmenler</h3>
                <a href="/Teacher/Create" class="btn btn-primary btn-xs pull-right">Yeni Ekle</a>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Öğretmen Adı</th>
                            <th>Öğretmen Soyadı</th>
                            <th>Yaşı</th>
                            <th>Cinsiyet</th>
                            <th>Öğrenci Sayısı</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var teacher in Model)
                        {
                            //öğrenci sayısını nasıl alıcam buraya
                        <tr>
                            <td>@teacher.Name</td>
                            <td>@teacher.Surname</td>
                            <td>@teacher.Age</td>
                            <td>@teacher.Gender</td>
                            <td>@teacher.studentCounts</td>
                            <td><a class="btn-primary" href="/Teacher/Edit/@teacher.Id">Guncelle</a></td>
                            <td><a class="btn-primary" href="/Teacher/Delete/@teacher.Id">Sil</a></td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
